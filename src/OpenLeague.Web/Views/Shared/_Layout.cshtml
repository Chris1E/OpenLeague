<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" media="screen"/>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(function() {
            $("#accordion").accordion(
                {
                    collapsible: true,
                    autoHeight: false,
                    active: 'none'
                });
        });
    </script>
</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <table style="border-style: none">
                    <tr style="background-color: transparent">
                        <td style="border-style: none">
                            <img src="../../Content/Images/BannerLogo.png" alt="Logo" />
                        </td>
                        <td style="border-style: none">
                            <h1>1E Open League</h1>
                        </td>
                    </tr>
                </table>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

            <div id="menucontainer">

                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contest List", "Index", "ContestList")</li> 
                    <li><a>Create Contest</a></li>
@*                    <li>@Html.ActionLink("Create Contest", "Create", "Contest")</li>
*@                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>

            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>
